// PSAppDeployToolkit default settings to ensure consistent code formatting and file encoding
{
    "files.exclude":{
        ".exe": true,
        ".msi": true,
        ".editorconfig": true,
        ".gitattributes": true,
        ".github":true,
        "**/Deploy-Application.exe":true,
        "**/Deploy-Application.exe.config": true,
        "**/Thumbs.db": true,
        "AppDeployToolkitLogo.png": true,
        "CHANGELOG.TXT": true,
        "COPYNG.Lesser": true,
        "docs": true,
        "Exemples": true,
        "LICENSE": true,
        "material": true,
        "Sources": true,
        "Testing": true,
        "wiki": true,
    },
    "terminal.integrated.profiles.windows": {
        "PowerShell Devops": {
            "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "source": "PowerShell",
            "args": [
                "-NoLogo",
                "-NoExit",
                "-ExecutionPolicy",
                "RemoteSigned"
 //               "Import-Module oh-my-posh;Set-Theme qwerty"
            ]
        },
        "Command Prompt": null,
        "Git Bash": null,
        "JavaScript Debug Terminal": null,
        "Azure Cloud Shell (Bash)": null,
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell Devops",
    "files.defaultLanguage": "powershell",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.persistentSessionReviveProcess": "never",
}
